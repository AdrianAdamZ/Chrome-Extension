{
  "manifest_version": 3,
  "name": "Highlight Text",
  "description": "Highlight Text on webpage Chrome Extension.",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
    "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js":  [
        "node_modules/@webcomponents/custom-elements/custom-elements.min.js",
        "highlighter.js",
        "content.js"
      ]

    }
  ]
}
 